{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "visual-portfolio/pagination-infinite",
	"title": "Pagination Infinite (Experimental)",
	"category": "media",
	"ancestor": ["visual-portfolio/loop"],
	"description": "Displays infinite scroll pagination for Visual Portfolio loop. Block is experimental and will change in future releases. Please use with caution.",
	"textdomain": "visual-portfolio",
	"attributes": {
		"showLoadingText": { "type": "boolean", "default": true },
		"loadingLabel": { "type": "string", "default": "Loading..." },
		"loadMoreLabel": { "type": "string", "default": "Load More" },
		"endListLabel": {
			"type": "string",
			"default": "You've reached the end of the list"
		}
	},
	"usesContext": [
		"visual-portfolio/blockId",
		"visual-portfolio/queryType",
		"visual-portfolio/baseQuery",
		"visual-portfolio/postsQuery",
		"visual-portfolio/imagesQuery"
	],
	"supports": {
		"html": false
	},
	"styles": [
		{ "name": "minimal", "label": "Minimal", "isDefault": true },
		{ "name": "classic", "label": "Classic" }
	],
	"style": "visual-portfolio-block-pagination-infinite",
	"editorStyle": "visual-portfolio-block-pagination-infinite-editor"
}
