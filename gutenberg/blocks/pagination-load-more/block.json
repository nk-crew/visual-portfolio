{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "visual-portfolio/pagination-load-more",
	"title": "Gallery Pagination Load More (Experimental)",
	"description": "Displays a load more button for pagination. Block is experimental and will change in future releases. Please use with caution.",
	"category": "media",
	"ancestor": ["visual-portfolio/loop"],
	"textdomain": "visual-portfolio",
	"icon": "download",
	"supports": {
		"html": false,
		"reusable": false,
		"interactivity": { "clientNavigation": true }
	},
	"styles": [
		{ "name": "minimal", "label": "Minimal", "isDefault": true },
		{ "name": "classic", "label": "Classic" }
	],
	"usesContext": [
		"visual-portfolio/blockId",
		"visual-portfolio/queryType",
		"visual-portfolio/baseQuery",
		"visual-portfolio/postsQuery",
		"visual-portfolio/imagesQuery"
	],
	"attributes": {
		"label": { "type": "string", "default": "Load More" },
		"loadingLabel": { "type": "string", "default": "Loading..." },
		"endListLabel": {
			"type": "string",
			"default": "You've reached the end of the list"
		},
		"showLoadingText": { "type": "boolean", "default": true }
	},
	"style": "visual-portfolio-block-pagination-load-more",
	"editorStyle": "visual-portfolio-block-pagination-load-more-editor"
}
