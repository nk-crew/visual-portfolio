{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "visual-portfolio/sort-button",
	"title": "Sort Button (Experimental)",
	"description": "Individual button for sorting portfolio items",
	"category": "media",
	"ancestor": ["visual-portfolio/sort-buttons"],
	"attributes": {
		"label": {
			"type": "string",
			"default": "Default"
		},
		"value": {
			"type": "string",
			"pattern": "^[a-zA-Z0-9_-]*$",
			"default": "default"
		},
		"active": {
			"type": "boolean",
			"default": false
		}
	},
	"editorStyle": "visual-portfolio-block-sort-button-editor",
	"style": "visual-portfolio-block-sort-button"
}
